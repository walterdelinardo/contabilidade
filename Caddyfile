:2001 {
  # Define a raiz da sua aplica\u00e7\u00e3o, que \u00e9 onde os arquivos de build do frontend ser\u00e3o copiados
  root * /usr/share/caddy/html

  # Habilita o servidor de arquivos para servir a sua aplica\u00e7\u00e3o est\u00e1tica
  file_server

  # Esta linha \u00e9 crucial para SPAs como o React. Ela garante que,
  # para qualquer rota que o Caddy n\u00e3o encontre, ele redirecione para o index.html,
  # permitindo que o React Router cuide do roteamento.
  try_files {path} /index.html
}
